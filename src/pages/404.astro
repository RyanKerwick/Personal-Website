---
import BaseLayout from "../layouts/BaseLayout.astro";
---
<BaseLayout title="Page not found">
  <main class="min-h-[60vh] grid place-items-center px-4">
    <div class="text-center">
      <h1 class="text-3xl font-bold">404 — Page not found</h1>
      <p class="mt-2 text-slate-600">The page you’re looking for doesn’t exist.</p>
      <a class="inline-block mt-4 px-4 py-2 rounded border" href="/">Go home</a>
    </div>
  </main>
</BaseLayout>
